@if (ShowConfirm)
{
    <div class="modal-backdrop show"></div>

    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" style="display:block">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@strTitle</h5>
                    <button @onclick="onCancel" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@ChildContent</p>
                </div>
                <div class="modal-footer">
                    <button @onclick="onCancel" type="button" class="btn btn-primary">Cancel</button>
                    <button @onclick="onConfirm" type="button" class="btn btn-danger" data-dismiss="modal">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public bool ShowConfirm { get; set; } = false;
    [Parameter] public string strTitle { get; set; } = "Confirm Delete?";
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback onConfirm { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }

    public void Show() => ShowConfirm = true;
    public void Hide() => ShowConfirm = false;
}